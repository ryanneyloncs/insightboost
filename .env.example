# InsightBoost Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# Anthropic API Key (required)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-api-key-here

# Flask Secret Key (required for sessions)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# Database URL (default: SQLite for development)
# PostgreSQL example: postgresql://user:password@localhost:5432/insightboost
DATABASE_URL=sqlite:///insightboost.db

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Maximum file upload size in MB
MAX_UPLOAD_SIZE_MB=50

# API Rate limiting (requests per minute)
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Visualization cache TTL in seconds
VISUALIZATION_CACHE_TTL_SECONDS=3600

# =============================================================================
# REDIS SETTINGS (optional, for production caching)
# =============================================================================

# Redis URL for caching and session storage
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Flask debug mode (set to False in production!)
FLASK_DEBUG=True

# Flask environment
FLASK_ENV=development

# Host and port for development server
FLASK_HOST=0.0.0.0
FLASK_PORT=8000
